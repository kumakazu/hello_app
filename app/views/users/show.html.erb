<div class="main user-show">
  <div class="container">
    <div class="user">
      <!-- <img>タグを用いて、プロフィール画像を表示 -->
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <!-- 以下で、ユーザー名を出力 -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力 -->
      <p><%= @user.email %></p>
    <% if @user.id == @current_user.id %>
      <!-- ユーザー編集ページへのリンクを作成users/show.html.erb -->
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
    <% end %>
    </div>
  </div>
</div>